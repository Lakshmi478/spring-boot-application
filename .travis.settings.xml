<?xml version="1.0" encoding="UTF-8" ?>
<settings xsi:schemaLocation='http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd'
          xmlns='http://maven.apache.org/SETTINGS/1.0.0' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'>
    
    <profiles>
        <profile>
            <repositories>
                <repository>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <id>bintray-parj-maven-snapshots</id>
                    <name>bintray</name>
                    <url>https://dl.bintray.com/parj/maven-snapshots</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <id>bintray-parj-maven-snapshots</id>
                    <name>bintray-plugins</name>
                    <url>https://dl.bintray.com/parj/maven-snapshots</url>
                </pluginRepository>
            </pluginRepositories>
            <id>bintray-snapshots</id>
        </profile>
        <profile>
            <repositories>
                <repository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>bintray-parj-maven</id>
                    <name>bintray</name>
                    <url>https://dl.bintray.com/parj/maven</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                    <id>bintray-parj-maven</id>
                    <name>bintray-plugins</name>
                    <url>https://dl.bintray.com/parj/maven</url>
                </pluginRepository>
            </pluginRepositories>
            <id>bintray-release</id>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>bintray-snapshots</activeProfile>
        <activeProfile>bintray-release</activeProfile>
    </activeProfiles>
    <servers>
        <server>
            <id>bintray-snapshots</id>
            <username>${env.DOCKER_BINTRAY_USER}</username>
            <password>${env.DOCKER_BINTRAY_API}</password>
        </server>
            <server>
            <id>bintray-release</id>
            <username>${env.DOCKER_BINTRAY_USER}</username>
            <password>${env.DOCKER_BINTRAY_API}</password>
        </server>
  </servers>
</settings>